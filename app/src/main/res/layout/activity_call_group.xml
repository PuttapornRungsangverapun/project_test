<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.por.project_test.CallGroupActivity">

    <Button

        android:id="@+id/bt_call_group"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        android:text="Call" />

    <Button
        android:id="@+id/reject_group"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/bt_call_group"
        android:text="reject" />

    <Button
        android:id="@+id/receive_group"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/reject_group"
        android:text="receive" />

    <Button
        android:id="@+id/speaker_group"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="speaker"
        android:layout_below="@+id/receive_group" />
</RelativeLayout>
